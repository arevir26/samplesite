extend layout

block title
	title List of #{page_category} Movies
block main
	div.container
		div.row
			div.col.col-12.col-sm-3.list-group
				div.list-group-item.active Categories
				a(href=host+"/movies/all/1/"+order ).list-group-item All Categories
				each category in categorylist
					a(href=host+"/movies/"+category.category_name+"/1/"+links.order).list-group-item
						| #{category.category_name} (#{category.category_count})
			div.col.col-12.col-sm-9.pr-sm-0
				h5.list-group-item.active
					if query.length
						| Showing #{movielist.length} Search Result("#{query}") out of #{totalresult} movies
					else
						| Showing #{movielist.length} out of #{totalresult} movies
				div.container.text-center
					- var clearfloat = 0
					each movie in movielist
						- clearfloat++
						div.card.m-3.p-4.align-top.text-center.col-md-3(style="display:inline-block")
							a(href=host+"/watch/"+movie.movie_id)
								img(src=host+"/images/moviecon/"+movie.movie_name+".jpg",width="100px",height="150px").card-image-center
								h5.card-text.text-center= movie.movie_name
								if remove_enabled
									div
										a(href=host+"/moviepanel/remove/"+movie.movie_id) Remove
						unless clearfloat%3
							div.clearfloat
					else
						h4= "Nothing to Show."

				div.clearfloat
				ul.pagination.justify-content-center
					- var last = 0
					each pagelink in pagination
						- last++
						if query.length
							li.page-item
								a.page-link(href=pagelink.link+"?search="+query)= pagelink.pagename
						else
							li.page-item
								a.page-link(href=pagelink.link)= pagelink.pagename
					else
						| That's All Folks :-) New movies will be added soon.
			div.clearfloat()