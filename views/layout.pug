doctype html
html
	head
		block title
			title= title
		link(rel="stylesheet", href=host+"/style.css")
	body
		block header
			div.head
				h2 Movie Gallery
				nav
					form.search-form
						input(type="text",placeholder="Search",name="search")
						input(type="submit",value="Go")
					ul
						li
							a(href=host) Home
						li
							a(href=host+"/movies") Movies
						unless remove_enabled
							li
								a(href=host+"/admin/login") Admin Login
						if remove_enabled
							li
								a(href=host+"/moviepanel") Add Movie
							li
								a(href=host+"/category") Add Category
							li
								a(href=host+"/admin/logout") Logout
		div.main
			block main
		div.footer
			block footer
